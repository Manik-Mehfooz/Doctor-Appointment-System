@model MedicalStore.Models.clsSalesReport

@{
    ViewBag.Title = "Daily Sale Report";
    Layout = "~/Views/_LayoutPage.cshtml";
}

@*<ol class="breadcrumb">
    <li style="font-weight:bold;">Daily Sale Report</li>
    <li>@Html.ActionLink("DashBoard", "Index", "Users")</li>    
</ol>*@

<ul class="breadcrumb-bg">
    <li><a href="../../rptDailySale/Print"><span class="fa fa-print"></span> Daily Sale Report </a> </li>   
    <li><a href="../../Users/Index"> <span class="fa fa-dashboard"></span> DashBoard</a> </li>       
</ul>

<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box">
                <div class="box-header with-border">
                    <h3 class="box-title">Daily Sale Report</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()  
                        
                        <div class="box-body col-md-6 col-sm-12 bArea">
                            <div class="form-group">
                                <label class="col-sm-4 control-label text-right">@Html.Label("Report Type")</label>
                                <div class="col-sm-8">
                                    @Html.RadioButton("ReportType", "Detail", new { @checked = "checked" }) Sale Detail &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;     
                                    @Html.RadioButton("ReportType", "Summary", new { }) Sale Summary 
                                </div>
                            </div>
                        </div>
                        <div class="box-body col-md-6 col-sm-12 bArea">
                            <div class="form-group">
                                <div class="col-sm-8">
                                </div>
                            </div>
                        </div>
                                          
                        <div class="box-body col-md-6 col-sm-12 bArea">
                            <div class="form-group">
                                <label class="col-sm-4 control-label text-right">@Html.Label("Sale Type")</label>
                                <div class="col-sm-8">
                                    @Html.RadioButtonFor(model => model.SaleType, "ALL", new { @checked="checked"}) ALL &nbsp;&nbsp; &nbsp;&nbsp; 
                                    @Html.RadioButtonFor(model => model.SaleType, "OPD") OPD &nbsp;&nbsp;&nbsp;&nbsp; 
                                    @Html.RadioButtonFor(model => model.SaleType, "AdmitPatient") Admit Patient <br />
                                </div>
                            </div>
                        </div>
                        
                        <div class="box-body col-md-6 col-sm-12 bArea">
                            <div class="form-group">
                                <div class="col-sm-8">
                                </div>
                            </div>
                        </div>
                        
                        <div class="box-body col-md-6 col-sm-12 bArea">
                            <div class="form-group">
                                <label class="col-sm-4 control-label text-right">@Html.Label("Doctor Name")</label>
                                <div class="col-sm-8">
                                    @Html.DropDownList("DoctorID", ViewBag.DdDoctor as SelectList, "Select Doctor Name", new { @class = "form-control  select2" })
                                </div>
                            </div>
                        </div>
                        <div class="box-body col-md-6 col-sm-12 bArea">
                            <div class="form-group">
                                <div class="col-sm-8">
                                </div>
                            </div>
                        </div>
                       
                        <div class="box-body col-md-6 col-sm-12 bArea">
                            <div class="form-group">
                                <label class="col-sm-4 control-label text-right">@Html.Label("Select Date")</label>
                                <div class="col-sm-8">
                                    @Html.TextBoxFor(model => model.SaleDate, new { @Value=DateTime.Now.Date.ToString("MM/dd/yyyy"), id="Enterdatepicker", @class = "form-control" })
                                    
                                </div>
                            </div>
                        </div>
                      
                       
                        <div class="box-footer col-xs-12">
                            <div class="form-group">
                                <label class="col-sm-2 control-label"></label>
                                <div class="col-sm-10">
                                    <input type="submit" name="submit1" value="Print Report" class="btn btn-success" />                                    
                                    @Html.ActionLink("Cancel","Index", "Users",null, new { @class="btn btn-danger"})
                                </div>
                            </div>
                        </div>
                    }
                    <div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Select2 -->
<script src="@Url.Content("~/Resources/plugins/select2/select2.full.min.js")"></script>

<script type="text/javascript">
    $(function () {
        //Initialize Select2 Elements
        $(".select2").select2();
    });
</script>
