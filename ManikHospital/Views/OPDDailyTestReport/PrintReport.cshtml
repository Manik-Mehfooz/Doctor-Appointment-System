@model MedicalStore.Models.clsRptOutDoorPatientTestSummary

@{
    ViewBag.Title = "Print Report";
    Layout = "~/Views/_LayoutPage.cshtml";
}

@*<ol class="breadcrumb">
    <li style="font-weight: bold;">Out Door Patient Test Summary Report</li>
    <li>@Html.ActionLink("DashBoard", "Index", "Users")</li>
</ol>*@

<ul class="breadcrumb-bg">
    <li><a href="#"><span class="fa fa-print text-info"></span> OPD Daily Test Report</a> </li>   
    <li><a href="../../Users/Index"> <span class="fa fa-tachometer"></span> DashBoard</a> </li>       
</ul>

<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box">
                <div class="box-header with-border">
                    <h3 class="box-title">OPD Daily Investigation Test Report</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()        
                        
                        <div class="box-body col-md-6 col-sm-12 bArea">
                            <div class="form-group">
                                <label class="col-sm-4 control-label text-right">@Html.Label("Doctor")</label>
                                <div class="col-sm-8">
                                    @Html.DropDownList("DoctorID", ViewBag.DdDoctor as SelectList, "Select Doctor Name", new { @class = "form-control  select2" })
                                </div>
                            </div>
                        </div>
                        <div class="box-body col-md-6 col-sm-12 bArea">
                            <div class="form-group">
                                <div class="col-sm-8">
                                </div>
                            </div>
                        </div>   
                        <div class="box-body col-md-6 col-sm-12 bArea">
                            <div class="form-group">
                                <label class="col-sm-4 control-label text-right">@Html.LabelFor(model => model.TestType) *</label>
                                <div class="col-sm-8">
                                    @Html.RadioButtonFor(model => model.TestType, "All", new { @checked = "checked" }) All &nbsp;&nbsp;
                                    @Html.RadioButtonFor(model => model.TestType, "Lab", new {  }) Lab &nbsp;&nbsp;
                                    @Html.RadioButtonFor(model => model.TestType, "X-Ray", new {  }) X-Ray
                                    &nbsp;&nbsp;
                                    @Html.RadioButtonFor(model => model.TestType, "Ultra Sound", new {   }) Ultra Sound
                                    &nbsp;&nbsp;
                                    @Html.RadioButtonFor(model => model.TestType, "ECHO", new {   }) ECHO
                                </div>
                            </div>
                        </div> 
                        <div class="box-body col-md-6 col-sm-12 bArea">
                            <div class="form-group">
                                <div class="col-sm-8">
                                </div>
                            </div>
                        </div>   
                        <div class="box-body col-md-6 col-sm-12 bArea">
                            <div class="form-group">
                                <label class="col-sm-4 control-label text-right">@Html.Label("Report Day")</label>
                                <div class="col-sm-8">
                                    @Html.TextBoxFor(model => model.FromDate, new { Value = ViewBag.fDate, id = "Enterdatepicker", @class = "form-control" })

                                </div>
                            </div>
                        </div>
                        
                        <div class="box-body col-md-6 col-sm-12 bArea">
                            <div class="form-group">
                                <div class="col-sm-8">
                                </div>
                            </div>
                        </div>
                        <div class="box-footer col-xs-12">
                            <div class="form-group">
                                <label class="col-sm-2 control-label"></label>
                                <div class="col-sm-10">
                                    <input type="submit" name="submit1" value="Print Report" class="btn btn-success" />
                                    @Html.ActionLink("Cancel", "Index", "Users", null, new { @class = "btn btn-danger" })
                                </div>
                            </div>
                        </div>
                    }
                    <div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Select2 -->
<script src="@Url.Content("~/Resources/plugins/select2/select2.full.min.js")"></script>

<script type="text/javascript">
    $(function () {
        //Initialize Select2 Elements
        $(".select2").select2();
    });
</script>
