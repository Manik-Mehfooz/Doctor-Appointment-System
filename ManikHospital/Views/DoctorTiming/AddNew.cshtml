<ul class="breadcrumb-bg">
    <li><a href="../DoctorTiming/Index"><span class="fa fa-home"></span> List - Doctor Timing</a> </li>   
    <li><a href="../DoctorTiming/AddNew"> <span class="fa fa-plus"></span> Add Doctor Timing</a> </li>       
</ul>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box">
                <div class="box-header with-border">
                    <h3 class="box-title">Add Information</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <div class="box-body">
                            <div class="form-group">
                                <label class="col-sm-2 control-label text-right">@Html.LabelFor(model => model.DoctorID) *</label>
                                <div class="col-sm-6">
                                    @Html.DropDownList("DoctorID", ViewBag.DdDoctor as SelectList, "Select Doctor Name", new { @class = "form-control  select2" })
                                </div>
                                <div class="col-sm-4">
                                    @Html.ValidationMessageFor(model => model.DoctorID, null, new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="box-body">
                            <div class="form-group">
                                <label class="col-sm-2 control-label text-right">@Html.LabelFor(model => model.DoctorTime) *</label>
                                <div class="col-sm-6">
                                    @Html.TextBoxFor(model => model.DoctorTime, new { @class = "form-control" })
                                </div>
                                <div class="col-sm-4">
                                    @Html.ValidationMessageFor(model => model.DoctorTime, null, new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="box-body">
                            <div class="form-group">
                                <label class="col-sm-2 control-label text-right">@Html.LabelFor(model => model.Days) *</label>
                                <div class="col-sm-6">
                                    @Html.TextBoxFor(model => model.Days, new { @class = "form-control" })
                                </div>
                                <div class="col-sm-4">
                                    @Html.ValidationMessageFor(model => model.Days, null, new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="box-footer">
                            <div class="form-group">
                                <label class="col-sm-2 control-label"></label>
                                <div class="col-sm-10">
                                    <input type="submit" value="Add" class="btn btn-info" />
                                    @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-default" })
                                </div>
                            </div>
                        </div>
                    }
                    <div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>



<script src="@Url.Content("~/Resources/plugins/select2/select2.full.min.js")"></script>
<script type="text/javascript">
    $(function () {
        //Initialize Select2 Elements
        $(".select2").select2();
    });
</script>