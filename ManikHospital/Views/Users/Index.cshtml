<script>

    $(document).ready(function () {
        $.ajax({
            type: "POST",
            datatype: "json",
            contentType: "application/json",
            url: '@Url.Action("VisualizeMonthlyOPD", "Users")',
            success: function (resultMonthlyOPD) {
                google.charts.load('current', {
                    'packages': ['corechart']
                });
                google.charts.setOnLoadCallback(function () {
                    drawChartMonthlyOPD(resultMonthlyOPD);
                });
            }
        });
    });




    $(document).ready(function () {
        $.ajax({
            type: "POST",
            datatype: "json",
            contentType: "application/json",
            url: '@Url.Action("VisualizeYearlyOPD", "Users")',
            success: function (resultYearlyOPD) {
                google.charts.load('current', {
                    'packages': ['corechart']
                });
                google.charts.setOnLoadCallback(function () {
                    drawChartYearlyOPD(resultYearlyOPD);
                });
            }
        });
    });


</script>

