<ul class="breadcrumb-bg">
    <li><a href="../EmplyeeSalary/Index"><span class="fa fa-home"></span> List - Emplyee Salary</a> </li>   
    <li><a href="../EmplyeeSalary/AddNew"> <span class="fa fa-plus"></span> Add Emplyee Salary</a> </li>       
</ul>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box">
                <div class="box-header with-border">
                    <h3 class="box-title">Employee Monthly Salary</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <div class="box-body">
                            <div class="form-group">
                                <label class="col-sm-2 control-label text-right">@Html.LabelFor(model => model.ContactID) *</label>
                                <div class="col-sm-6">
                                    @Html.DropDownList("ContactID", ViewBag.DdEmployees as SelectList, "Select Employee Name", new { @class = "form-control  select2" })
                                </div>
                                <div class="col-sm-4">
                                    @Html.ValidationMessageFor(model => model.ContactID, null, new { @class = "text-danger" })
                                </div>
                                <div class="col-sm-4">
                                    @Html.ValidationMessageFor(model => model.ContactID, null, new { @class = "text-danger" })
                                    <span class="text-danger">@ViewBag.ErrorMessage</span>
                                </div>
                            </div>
                        </div>
                        
                         <div class="box-body">
                            <div class="form-group">
                                <label class="col-sm-2 control-label text-right">@Html.LabelFor(model => model.PaymentType) *</label>
                                <div class="col-sm-6">
                                    @Html.DropDownListFor(model => model.PaymentType, new List<SelectListItem> { 
                                        new SelectListItem(){ Text="Cash", Value="Cash"},
                                        new SelectListItem(){ Text="Cheque", Value="Cheque"},                                       
                                   }, "Select Payment Type", new { @class = "form-control select2" })                                
                                </div>
                                <div class="col-sm-4">
                                    @Html.ValidationMessageFor(model => model.PaymentType, null, new { @class = "text-danger" })
                                    <span class="text-danger">@ViewBag.ErrorMessage</span>
                                </div>
                            </div>
                        </div>
                         <div class="box-body">
                            <div class="form-group">
                                <label class="col-sm-2 control-label text-right">@Html.LabelFor(model => model.SalaryAmount) *</label>
                                <div class="col-sm-6">
                                    @Html.TextBoxFor(model => model.SalaryAmount, new { @class = "form-control" })
                                </div>
                                <div class="col-sm-4">
                                    @Html.ValidationMessageFor(model => model.SalaryAmount, null, new { @class = "text-danger" })
                                    <span class="text-danger">@ViewBag.ErrorMessage</span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="box-body">
                            <div class="form-group">
                                <label class="col-sm-2 control-label text-right">@Html.LabelFor(model => model.LoanAmount) </label>
                                <div class="col-sm-6">
                                    @Html.TextBoxFor(model => model.LoanAmount, new { @class = "form-control" })
                                </div>                               
                            </div>
                        </div>
                        
                         <div class="box-body">
                            <div class="form-group">
                                <label class="col-sm-2 control-label text-right">@Html.LabelFor(model => model.SalaryDate) *</label>
                                <div class="col-sm-6">
                                    @Html.TextBoxFor(model => model.SalaryDate, new { @class = "form-control" })
                                </div>
                                <div class="col-sm-4">
                                    @Html.ValidationMessageFor(model => model.SalaryDate, null, new { @class = "text-danger" })
                                    <span class="text-danger">@ViewBag.ErrorMessage</span>
                                </div>
                            </div>
                        </div>
                        
                         <div class="box-body">
                            <div class="form-group">
                                <label class="col-sm-2 control-label text-right">@Html.LabelFor(model => model.Remarks) </label>
                                <div class="col-sm-6">
                                    @Html.TextAreaFor(model => model.Remarks, new { @class = "form-control" })
                                </div>
                                
                            </div>
                        </div>
                        
                        <div class="box-footer">
                            <div class="form-group">
                                <label class="col-sm-2 control-label"></label>
                                <div class="col-sm-10">
                                    <input type="submit" value="Save" class="btn btn-info" />
                                    @Html.ActionLink("Cancel", "Index",null, new { @class="btn btn-danger"})
                                </div>
                            </div>
                        </div>
                    }
                    <div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script src="@Url.Content("~/Resources/plugins/select2/select2.full.min.js")"></script>
<script type="text/javascript">
    $(function () {
        //Initialize Select2 Elements
        $(".select2").select2();
    });
</script>