<ul class="breadcrumb-bg">
    <li><a href="../../FeeType/Index"><span class="fa fa-home"></span> List - Fee Type</a> </li>   
    <li><a href="../../FeeType/AddNew"> <span class="fa fa-plus"></span> Add Fee Type</a> </li> 
    <li><a href="#"> <span class="fa fa-plus"></span> Update Fee Type</a> </li>       
</ul>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box">
                <div class="box-header with-border">
                    <h3 class="box-title">Doctor Fee</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(model => model.FeeTypeID)
                        
                        <div class="box-body">
                            <div class="form-group">
                                <label class="col-sm-2 control-label text-right">@Html.LabelFor(model => model.FeeType) *</label>
                                <div class="col-sm-6">
                                    @Html.TextBoxFor(model => model.FeeType, new { @class = "form-control" })
                                </div>
                                <div class="col-sm-4">
                                    @Html.ValidationMessageFor(model => model.FeeType, null, new { @class = "text-danger" })
                                    <span class="text-danger">@ViewBag.ErrorMessage</span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="box-footer">
                            <div class="form-group">
                                <label class="col-sm-2 control-label"></label>
                                <div class="col-sm-10">
                                    <input type="submit" value="Update" class="btn btn-info" />
                                    @Html.ActionLink("Cancel", "Index",null, new { @class="btn btn-danger"})
                                </div>
                            </div>
                        </div>
                    }
                    <div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

