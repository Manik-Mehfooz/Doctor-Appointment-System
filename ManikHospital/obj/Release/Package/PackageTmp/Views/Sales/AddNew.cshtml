                                <br />
                                <br />

                                @if (ViewBag.ProductList != null || ViewBag.List != null)
                                {   
                                    <table id="myTable" class="table table-stripped table-bordered">
                                        <tr class="info">
                                            <td>
                                                <label>Item</label>
                                            </td>
                                            <td>
                                                <label>Strength</label>
                                            </td>
                                            <td>
