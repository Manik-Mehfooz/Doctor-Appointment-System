@model MedicalStore.Models.clsProductType

@{
    ViewBag.Title = "Product Type";
    Layout = "~/Views/_LayoutPage.cshtml";
}

<ol class="breadcrumb">
    <li style="font-weight:bold;">Company</li>
    <li>@Html.ActionLink("Product Type List", "Index")</li>
    <li>@Html.Raw("Edit Product Type")</li>
</ol>
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box">
                <div class="box-header with-border">
                    <h3 class="box-title">Edit Information</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(model => model.ProductTypeID)
                        <div class="box-body">
                            <div class="form-group">
                                <label class="col-sm-2 control-label text-right">@Html.LabelFor(model => model.ProductType) *</label>
                                <div class="col-sm-6">
                                    @Html.TextBoxFor(model => model.ProductType, new { @class = "form-control" })
                                    <i><span class="text-gray">@Html.Label("Tablet, Injection")</span></i>
                                </div>
                                <div class="col-sm-4">
                                    @Html.ValidationMessageFor(model => model.ProductType, null, new { @class = "text-danger" })
                                    <span class="text-danger">@ViewBag.ErrorMessage</span>
                                </div>
                            </div>
                        </div>
                        <div class="box-footer">
                            <div class="form-group">
                                <label class="col-sm-2 control-label"></label>
                                <div class="col-sm-10">
                                    <input type="submit" value="Update" class="btn btn-info" />
                                    @Html.ActionLink("Cancel", "Index",null, new { @class="btn btn-danger"})
                                </div>
                            </div>
                        </div>
                    }
                    <div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
