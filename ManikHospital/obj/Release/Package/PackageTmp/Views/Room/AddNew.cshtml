@model MedicalStore.Models.clsRoom

@{
    ViewBag.Title = "Rooms";
    Layout = "~/Views/_LayoutPage.cshtml";
}

<ol class="breadcrumb">
    <li style="font-weight: bold;">Rooms</li>
    <li>@Html.ActionLink("Rooms List", "Index")</li>
    <li>@Html.Raw("Add New Rooms")</li>
</ol>
<div class="row">
    <div class="col-md-12">
        <div class="box">
            <div class="box-header with-border">
                <h3 class="box-title">Add Information</h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <div class="box-body">
                        <div class="form-group">
                            <label class="col-sm-2 control-label text-right">@Html.LabelFor(model => model.Room) *</label>
                            <div class="col-sm-6">
                                @Html.TextBoxFor(model => model.Room, new { @class = "form-control" })
                            </div>
                            <div class="col-sm-4">
                                @Html.ValidationMessageFor(model => model.Room, null, new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="box-body">
                        <div class="form-group">
                            <label class="col-sm-2 control-label text-right">@Html.LabelFor(model => model.RoomType) *</label>
                            <div class="col-sm-6">
                                @Html.RadioButtonFor(model => model.RoomType, "Normal", new { @checked = "checked" }) NORMAL &nbsp;&nbsp;
                                    @Html.RadioButtonFor(model => model.RoomType, "Vip") VIP
                            </div>
                            <div class="col-sm-4">
                                @Html.ValidationMessageFor(model => model.RoomType, null, new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="box-body">
                        <div class="form-group">
                            <label class="col-sm-2 control-label text-right">@Html.LabelFor(model => model.RoomCharges) *</label>
                            <div class="col-sm-6">
                                @Html.TextBoxFor(model => model.RoomCharges, new { @class = "form-control" })
                            </div>
                            <div class="col-sm-4">
                                @Html.ValidationMessageFor(model => model.RoomCharges, null, new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="box-footer">
                        <div class="form-group">
                            <label class="col-sm-2 control-label"></label>
                            <div class="col-sm-10">
                                <input type="submit" value="Save" class="btn btn-info" />
                                @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-danger" })
                            </div>
                        </div>
                    </div>
                }
                <div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Select2 -->
<script src="@Url.Content("~/Resources/plugins/select2/select2.full.min.js")"></script>

<script type="text/javascript">
    $(function () {
        //Initialize Select2 Elements
        $(".select2").select2();
    });
</script>
