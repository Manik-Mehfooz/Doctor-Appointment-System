@model MedicalStore.Models.clsProduct

@{
    ViewBag.Title = "Product";
    Layout = "~/Views/_LayoutPage.cshtml";
}

<ol class="breadcrumb">
    <li style="font-weight:bold;">Product</li>
    <li>@Html.ActionLink("Product List", "Index")</li>
    <li>@Html.Raw("Add New Product")</li>
</ol>
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box">
                <div class="box-header with-border">
                    <h3 class="box-title">Add Information</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <div class="box-body">
                            <div class="form-group">
                                <label class="col-sm-2 control-label text-right">@Html.LabelFor(model => model.Company) *</label>
                                <div class="col-sm-6">
                                    @Html.DropDownList("CompanyID", ViewBag.DdCompany as SelectList,"Select Company", new {  @class = "form-control select2" })  
                                </div>
                                <div class="col-sm-1" style="margin-left:-28px; margin-top:7px;">
                                  <input type="image" name="addcompany" value="Company"  src="~/images/plus24x24.png" title="Add New Company" /> 
                                </div>
                                <div class="col-sm-3">
                                    @Html.ValidationMessageFor(model => model.CompanyID, null, new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="box-body">
                            <div class="form-group">
                                <label class="col-sm-2 control-label text-right">@Html.LabelFor(model => model.ProductType) *</label>
                                <div class="col-sm-6">
                                    @Html.DropDownList("ProductTypeID", ViewBag.DdProductType as SelectList, "Select Product Type", new { @class = "form-control select2" })
                                </div>
                                <div class="col-sm-1" style="margin-left:-28px; margin-top:7px;">
                                   <input type="image" name="addtype" value="ptype"  src="~/images/plus24x24.png" title="Add New Prodcut Type" /> 
                                </div>
                                <div class="col-sm-3">
                                    @Html.ValidationMessageFor(model => model.ProductTypeID, null, new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="box-body">
                            <div class="form-group">
                                <label class="col-sm-2 control-label text-right">@Html.LabelFor(model => model.ProductName) *</label>
                                <div class="col-sm-6">
                                    @Html.TextBoxFor(model => model.ProductName, new { @class = "form-control" })
                                    <div class="col-sm-1">
                                       
                                    </div>
                                </div>
                                <div class="col-sm-3">
                                    @Html.ValidationMessageFor(model => model.ProductName, null, new { @class = "text-danger" })
                                    <span class="text-danger">@ViewBag.ErrorMessage</span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="box-body">
                            <div class="form-group">
                                <label class="col-sm-2 control-label text-right">@Html.LabelFor(model => model.Strength) *</label>
                                <div class="col-sm-6">
                                    @Html.DropDownList("StrengthID", ViewBag.DdStrength as SelectList, "Select Strength", new { @class = "form-control select2" })
                                </div>
                                 <div class="col-sm-1" style="margin-left:-28px; margin-top:7px;">
                                   <input type="image" name="addstrength" value="strength"  src="~/images/plus24x24.png" title="Add New Strength" /> 
                                </div>
                                <div class="col-sm-3">
                                    @Html.ValidationMessageFor(model => model.StrengthID, null, new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        
                        <div class="box-body">
                            <div class="form-group">
                                <label class="col-sm-2 control-label text-right">@Html.LabelFor(model => model.ProductCode) </label>
                                <div class="col-sm-6">
                                    @Html.TextBoxFor(model => model.ProductCode, new { @class = "form-control" })
                                </div>
                              @*  <div class="col-sm-4">
                                    @Html.ValidationMessageFor(model => model.ProductCode, null, new { @class = "text-danger" })
                                </div>*@
                            </div>
                        </div>
                        <div class="box-body">
                            <div class="form-group">
                                <label class="col-sm-2 control-label text-right">@Html.LabelFor(model => model.ProductRegNo) </label>
                                <div class="col-sm-6">
                                    @Html.TextBoxFor(model => model.ProductRegNo, new { @class = "form-control" })
                                </div>
                               @* <div class="col-sm-4">
                                    @Html.ValidationMessageFor(model => model.ProductRegNo, null, new { @class = "text-danger" })
                                </div>*@
                            </div>
                        </div>
                        <div class="box-body">
                            <div class="form-group">
                                <label class="col-sm-2 control-label text-right">@Html.LabelFor(model => model.Formula) </label>
                                <div class="col-sm-6">
                                    @Html.TextBoxFor(model => model.Formula, new { @class = "form-control" })
                                </div>
                                @*<div class="col-sm-4">
                                    @Html.ValidationMessageFor(model => model.Formula, null, new { @class = "text-danger" })
                                </div>*@
                            </div>
                        </div>
                        
                        <div class="box-body">
                            <div class="form-group">
                                <label class="col-sm-2 control-label text-right">@Html.LabelFor(model => model.UnitPrice) *</label>
                                <div class="col-sm-6">
                                    @Html.TextBoxFor(model => model.UnitPrice, new { @class = "form-control" })
                                     <div class="col-sm-1" style="margin-left:-28px; margin-top:7px;">
                                        
                                    </div>
                                </div>
                                <div class="col-sm-3">
                                    @Html.ValidationMessageFor(model => model.UnitPrice, null, new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="box-footer">
                            <div class="form-group">
                                <label class="col-sm-2 control-label"></label>
                                <div class="col-sm-10">
                                    <input type="submit" value="Save" class="btn btn-info" />
                                    @Html.ActionLink("Cancel", "Index",null, new { @class="btn btn-danger"})
                                </div>
                            </div>
                        </div>
                    }
                    <div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

	<!-- Select2 -->
	<script src="@Url.Content("~/Resources/plugins/select2/select2.full.min.js")"></script>

	<script type="text/javascript">
    		$(function () {
       			//Initialize Select2 Elements
        		$(".select2").select2();
   	 	});
	</script>
